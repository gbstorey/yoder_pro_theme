<div class="mx-auto py-8">
  <div class="flex flex-wrap justify-center mx-auto p-2 gap-14">
    {% for collection in section.settings.collection_list %}
      {% if collection.featured_image != blank %}
        {% assign collection_image = collection.featured_image %}
      {% else %}
        {% assign collection_image = collection.products.first.image %}
      {% endif %}

      <div class="text-center px-2">
        <a href="{{ collection.url }}">
          {{ collection_image | image_url: width: 200 | image_tag: class: "w-full h-full object-cover transition duration-500 ease-in-out ", alt: collection.title }}
        </a>
        <h3>{{ collection.title }}</h3>
      </div>
    {% endfor %}

    {% if section.settings.collection_list == blank %}
      {% for item in (1..5) %}
        <div class="text-center px-2">
          <a href="#">
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover transition duration-500 ease-in-out bg-light-background border' }}
          </a>
          <h3>BRAND</h3>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Featured Organizations",
    "settings": [
      {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections",
        "limit": 5
      }
    ],
    "presets": [
      {
        "name": "Featured Organizations"
      }
    ]
  }
{% endschema %}