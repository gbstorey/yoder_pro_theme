<div class="flex flex-col items-center mb-8 border border-light-border rounded-lg shadow-lg">
  {% if section.settings.article %}
    <div class="block md:flex justify-between items-center max-w-6xl {{  section.settings.orientation }}">

      <div class="flex-1 px-6 my-4 h-96 overflow-hidden">
        {% if section.settings.videoURL %}
          {% if section.settings.videoURL.type == 'youtube' %}
            <iframe
              src="https://www.youtube.com/embed/{{ section.settings.videoURL.id }}"
              class="w-full h-full object-cover"
              allow="autoplay; encrypted-media"
              title="Product Review"></iframe>
          {% else %}
            <iframe
              src="https://player.vimeo.com/video/{{ section.settings.videoURL.id }}"
              class="w-full h-full object-cover"
              allow="autoplay; encrypted-media"
              title="Product Review"></iframe>
          {% endif %}
        {% endif %}
      </div>

      <div class="flex-1 px-6 my-4 space-y-2">
        <h2>{{ section.settings.article.author }}</h2>
        <h5>{{ section.settings.article.created_at | date: "%a, %b %d, %Y" }}</h5>
        <p>
          {{ section.settings.article.excerpt_or_content }}
        </p>
      </div>
    </div>
  {% else %}
    <h2 class="my-4">Stay tuned for our review of this ball!</h2>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Product Review Card",
    "settings": [
      {
        "type": "article",
        "id": "article",
        "label": "Choose A Posted Review"
      }, {
        "type": "video_url",
        "id": "videoURL",
        "label": "Embedded Video URL",
        "accept": ["youtube", "vimeo"]
      }, {
        "type": "radio",
        "id": "orientation",
        "label": "Card Orientation",
        "options": [
          {
            "value": "flex-row",
            "label": "Video on Left Side"
          }, {
            "value": "flex-row-reverse",
            "label": "Video on Right Side"
          }
        ],
        "default": "flex-row"
      }
    ]
  }
{% endschema %}