<div class="w-full py-6 px-2">
  <div class="border-2 border-gray-900 bg-white shadow-lg rounded-lg overflow-hidden px-4 py-4 text-center">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="h-72 overflow-hidden pb-2">
          {{ product.featured_image | image_url: width: 300 | image_tag: class: "w-full h-full object-contain transition duration-1000 ease-in-out hover:scale-105 transform", alt: product.featured_image.alt }}
        </div>
      {% else %}
        <div class="h-72 overflow-hidden pb-2">
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-contain bg-gray-100 transition duration-1000 ease-in-out hover:scale-105 transform' }}
        </div>
      {% endif %}
    </a>

    <div class="flex flex-col px-2 pb-2 h-16">
      <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium text-sm mb-2">
        {{ product.title | truncatewords: 8 }}
      </a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>

  </div>
</div>